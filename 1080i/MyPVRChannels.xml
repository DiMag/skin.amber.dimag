<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <views>50</views>
  <controls>
    <include>Background</include>
    <include content="BackgroundOverlay">
      <param name="parentid" value="50"/>
    </include>
    <include>Time</include>
    <control type="group">
      <include>OpenClose</include>
      <include>MiniVideoWindow</include>
      <control type="list" id="50" description="CHANNELS">
        <posx>960</posx>
        <posy>60</posy>
        <width>930</width>
        <height>960</height>
        <onleft>100</onleft>
        <onright>60</onright>
        <onup>50</onup>
        <ondown>50</ondown>
        <pagecontrol>60</pagecontrol>
        <scrolltime tween="sine" easing="inout">280</scrolltime>
        <itemlayout height="99">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <height>99</height>
            <width>930</width>
            <texture flipy="true" border="3">list/ListNF.png</texture>
          </control>
          <include>RecOverlay</include>
          <control type="label" description="Number">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.ChannelNumberLabel,[B],[/B]]</label>
          </control>
          <control type="label" description="Number">
            <visible>Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.ChannelNumberLabel,[B],[/B]]</label>
          </control>
          <control type="image" description="TV Logo">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <posx>80</posx>
            <posy>4</posy>
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <posx>186</posx>
            <height>55</height>
            <width>800</width>
            <scroll>false</scroll>
            <label>$INFO[ListItem.ChannelName,[B],[/B]]</label>
          </control>
          <control type="label" description="Label2">
            <posx>186</posx>
            <posy>38</posy>
            <height>55</height>
            <font>Details</font>
            <width>800</width>
            <scroll>false</scroll>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <posx>186</posx>
            <posy>90</posy>
            <width>880</width>
            <height>2</height>
            <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
            <midtexture colordiffuse="ffff0000" border="0,0,0,0">img/AmberDot.png</midtexture>
            <info>ListItem.Progress</info>
            <visible>ListItem.HasEpg</visible>
            <visible>ListItem.IsRecording</visible>
          </control>
          <control type="progress">
            <posx>186</posx>
            <posy>90</posy>
            <width>880</width>
            <height>2</height>
            <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
            <midtexture border="0,0,0,0">img/AmberDot.png</midtexture>
            <info>ListItem.Progress</info>
            <visible>ListItem.HasEpg</visible>
            <visible>!ListItem.IsRecording</visible>
          </control>        
        </itemlayout>
        <focusedlayout height="99">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1076</width>
            <height>99</height>
            <texture>list/ListFO.png</texture>
          </control>
          <include>RecOverlay</include>
          <control type="label" description="Number">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <posx>40</posx>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>Highlight</textcolor>
            <label>$INFO[ListItem.ChannelNumberLabel,[B],[/B]]</label>
          </control>
          <control type="label" description="Number">
            <visible>Skin.HasSetting(HideEPGLogos)</visible>
            <left>0</left>
            <posx>110</posx>
            <height>99</height>
            <width>80</width>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>Highlight</textcolor>
            <label>$INFO[ListItem.ChannelNumberLabel,[B],[/B]]</label>
          </control>
          <control type="image" description="TV Logo">
            <visible>!Skin.HasSetting(HideEPGLogos)</visible>
            <posx>80</posx>
            <posy>4</posy>
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <posx>186</posx>
            <height>55</height>
            <width>800</width>
            <label>$INFO[ListItem.ChannelName,[B],[/B]]</label>
          </control>
          <control type="label" description="Label2">
            <posx>186</posx>
            <posy>38</posy>
            <height>55</height>
            <font>Details</font>
            <width>800</width>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="progress">
            <posx>186</posx>
            <posy>90</posy>
            <width>880</width>
            <height>2</height>
            <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
            <midtexture colordiffuse="ffff0000" border="0,0,0,0">img/AmberDot.png</midtexture>
            <info>ListItem.Progress</info>
            <visible>ListItem.HasEpg</visible>
            <visible>ListItem.IsRecording</visible>
          </control>
          <control type="progress">
            <posx>186</posx>
            <posy>90</posy>
            <width>880</width>
            <height>2</height>
            <texturebg border="0,0,0,0">img/AmberDotBG.png</texturebg>
            <midtexture border="0,0,0,0">img/AmberDot.png</midtexture>
            <info>ListItem.Progress</info>
            <visible>ListItem.HasEpg</visible>
            <visible>!ListItem.IsRecording</visible>
          </control>
        </focusedlayout>
      </control>
    </control>
    <include content="PanelTemplate">
      <param name="top">445</param>
      <param name="height">385</param>
      <param name="heading">$VAR[panelheading]</param>
      <param name="subheading">$VAR[panelsubheading]</param>
      <param name="plot">$VAR[Plots]</param>
      <param name="footer">$VAR[panelfooter]</param>
      <param name="visibility">true</param>
      <param name="showflags">false</param>
    </include>
    <control type="scrollbar" id="60">
      <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
      <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
      <posx>21r</posx>
      <posy>99</posy>
      <width>36</width>
      <height>900</height>
      <texturesliderbackground>-</texturesliderbackground>
      <texturesliderbar>-</texturesliderbar>
      <texturesliderbarfocus>-</texturesliderbarfocus>
      <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
      <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
      <showonepage>false</showonepage>
      <orientation>vertical</orientation>
      <onleft>50</onleft>
      <onright>9000</onright>
    </control>
    <include>PVRSideBlade</include>
  </controls>
</window>