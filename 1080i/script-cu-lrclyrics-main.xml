<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">110</defaultcontrol>
	<zorder>0</zorder>
	<include>OpenClose</include>
	<controls>
	    <control type="group">
		    <visible>!Skin.HasSetting(Enable.VideoLyrics)</visible>
			<animation effect="fade" start="100" end="0" time="200" condition="!String.IsEmpty(Window(Home).Property(culrc.hidedialog)) | ">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,160" time="0" condition="!Skin.HasSetting(enable.bottomseekbar) + Skin.HasSetting(ShowInfoWithSeekBar) + !Window.IsVisible(MusicOSD)">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,130" time="0" condition="!Skin.HasSetting(enable.bottomseekbar) + Skin.HasSetting(ShowInfoWithSeekBar) + Window.IsVisible(MusicOSD)">Conditional</animation>
			<top>30</top>
			<left>300</left>
			<control type="image">
			    <posx>0</posx>
			    <posy>0</posy>
			    <width>1320</width>
			    <height>660</height>
			    <texture flipx="true">dialogs/SettingsBG.png</texture>
			    <colordiffuse>dfcebe9e</colordiffuse>
		    </control>
		</control>
	    
		<control type="group">
			<control type="list" id="110">
				<animation effect="slide" start="0,0" end="0,160" time="0" condition="!Skin.HasSetting(enable.bottomseekbar) + Skin.HasSetting(ShowInfoWithSeekBar) + !Window.IsVisible(MusicOSD)">Conditional</animation>
			    <animation effect="slide" start="0,0" end="0,130" time="0" condition="!Skin.HasSetting(enable.bottomseekbar) + Skin.HasSetting(ShowInfoWithSeekBar) + Window.IsVisible(MusicOSD)">Conditional</animation>
				<posx>30</posx>
				<posy>70</posy>
				<width>1860</width>
				<height>600</height>
				<onleft>dialog.close(all,true)</onleft>
				<onright>dialog.close(all,true)</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<scrolltime>200</scrolltime>
				<itemlayout height="60">
					<include condition="!Skin.HasSetting(Enable.VideoLyrics)">NormalLyrics</include>
				</itemlayout>
				<focusedlayout height="60">
					<include condition="!Skin.HasSetting(Enable.VideoLyrics)" content="NormalLyrics">
						<param name="textcolor">$VAR[HighlightColor]</param>
					</include>
				</focusedlayout>
			</control>
			<control type="label" id="200">
				<visible>false</visible>
			</control>
		</control>
		
		<include condition="Skin.HasSetting(Enable.VideoLyrics)">VideoLyrics</include>
		
	</controls>
</window>