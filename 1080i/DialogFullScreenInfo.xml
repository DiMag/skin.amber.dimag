<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
  <include>OSDFade</include>
  <controls>
    <control type="group">
      <top>720</top>
      <control type="image" description="Background">
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>361</height>
        <texture border="0,30,0,30">OSD/OSDBackground.png</texture>
        <colordiffuse>FFE2E2E2</colordiffuse>
      </control>
      <control type="group" description="Thumb">
        <top>-6</top>
      <control type="image" id="1">
        <left>555r</left>
        <top>682r</top>
        <width>525</width>
        <height>652</height>
        <texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
        <aspectratio align="center" aligny="bottom">keep</aspectratio>
      </control>
        <control type="group">
          <left>-260</left>
          <top>52</top>
          <control type="label" description="Main label">
            <posx>300</posx>
            <width>1100</width>
            <scroll>false</scroll>
            <align>left</align>
            <font>MainLabelBigTitle</font>
            <textcolor>Highlight</textcolor>
            <animation effect="fade" time="200">VisibleChange</animation>
            <wrapmultiline>true</wrapmultiline>
            <label>$VAR[FullScreenTitle]</label>
          </control>
          <control type="textbox">
            <left>300</left>
            <top>75</top>
            <width>1310</width>
            <height>125</height>
            <align>justify</align>
            <label>$INFO[VideoPlayer.Plot]</label>
            <font>InfoPlot</font>
          </control>
          <control type="grouplist" description="Flags">
            <left>303</left>
            <top>231</top>
            <width>900</width>
            <height>45</height>
            <itemgap>30</itemgap>
            <orientation>horizontal</orientation>
            <align>left</align>
            <include content="MediaFlagItems">
              <param name="type">videoplayer</param>
            </include>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>