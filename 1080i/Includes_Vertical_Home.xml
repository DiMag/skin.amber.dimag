      <ondown>9001</ondown>
      <onback>300</onback>
      <itemlayout width="400" height="60">
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>400</width>
          <height>60</height>
          <texture border="3">buttons/ButtonNF.png</texture>
        </control>
        <control type="label" description="Main Label">
          <posx>30</posx>
          <posy>0</posy>
          <width>360</width>
          <height>60</height>
          <label>$INFO[ListItem.Label]</label>
        </control>
      </itemlayout>
      <focusedlayout width="400" height="60">
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>400</width>
          <height>60</height>
          <texture border="2">buttons/ButtonFO.png</texture>
        </control>
        <control type="label" description="Main Label">
          <posx>30</posx>
          <posy>0</posy>
          <width>360</width>
          <height>60</height>
          <textcolor>Highlight</textcolor>
          <label>$INFO[ListItem.Label]</label>
        </control>
      </focusedlayout>
      <content>
        <include>Home.Submenu.Items</include>
      </content>
    </control>
  </include>
