<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">9000</defaultcontrol>
  <include>OpenClose</include>
  <controls>
    <include>DimBG</include>
    <control type="group" description="Content">
      <include>DialogOpenClose</include>
      <posx>132</posx>
      <posy>172</posy>
      <control type="image">
        <description>background image</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>1656</width>
        <height>736</height>
        <texture border="300,0,0,0">dialogs/DialogRightSmall.png</texture>
      </control>
      <control type="label" description="Song title">
        <posx>22</posx>
        <posy>20</posy>
        <width>837</width>
        <height>60</height>
        <textcolor>Highlight</textcolor>
        <textoffsetx>30</textoffsetx>
        <label>$VAR[MusicInfoHeader]</label>
        <label></label>
      </control>
      <control type="list">
        <left>22</left>
        <top>120</top>
        <width>1200</width>
        <height>630</height>
        <onleft>noop</onleft>
        <onright>noop</onright>
        <onup>noop</onup>
        <ondown>noop</ondown>
        <pagecontrol></pagecontrol>
        <scrolltime>200</scrolltime>
        <itemlayout height="50">
          <control type="label">
            <left>5</left>
            <top>0</top>
            <width>200</width>
            <height>50</height>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>Highlight</textcolor>
            <selectedcolor>selected</selectedcolor>
            <info>ListItem.Label</info>
          </control>
          <control type="label">
            <left>215</left>
            <top>0</top>
            <width>950</width>
            <height>50</height>
            <align>left</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <selectedcolor>white</selectedcolor>
            <info>ListItem.Label2</info>
          </control>
        </itemlayout>
        <focusedlayout height="50">
          <control type="label">
            <left>5</left>
            <top>0</top>
            <width>200</width>
            <height>50</height>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>Highlight</textcolor>
            <selectedcolor>selected</selectedcolor>
            <info>ListItem.Label</info>
          </control>
          <control type="label">
            <left>215</left>
            <top>0</top>
            <width>950</width>
            <height>50</height>
            <align>left</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <selectedcolor>white</selectedcolor>
            <info>ListItem.Label2</info>
          </control>
        </focusedlayout>
        <content>
          <include condition="String.IsEqual(ListItem.DBType,artist)">ArtistInfoContent</include>
          <include condition="String.IsEqual(ListItem.DBType,album)">AlbumInfoContent</include>
          <include condition="String.IsEqual(ListItem.DBType,song)">SongInfoContent</include>
        </content>
      </control>
      <control type="label" description="location">
        <visible>!String.IsEqual(ListItem.DBType,artist)</visible>
        <posx>22</posx>
        <posy>650</posy>
        <width>909</width>
        <height>60</height>
        <textoffsetx>30</textoffsetx>
        <font>font22</font>
        <textcolor>Grey</textcolor>
        <label>$INFO[ListItem.Path]</label>
      </control>
      <control type="label" description="Type">
        <visible>String.IsEqual(ListItem.DBType,song)</visible>
        <posx>1240</posx>
        <posy>650</posy>
        <width>100</width>
        <height>60</height>
        <align>right</align>
        <font>font22</font>
        <textcolor>Grey</textcolor>
        <textoffsetx>0</textoffsetx>
        <label>$INFO[ListItem.FileExtension]</label>
      </control>
      <control type="image" description="Icon Shadow">
        <posx>1307</posx>
        <posy>64</posy>
        <width>315</width>
        <height>315</height>
        <texture colordiffuse="HeavyShadow">$INFO[ListItem.Icon]</texture>
        <aspectratio>keep</aspectratio>
      </control>
      <control type="image" description="Icon">
        <posx>1299</posx>
        <posy>56</posy>
        <width>315</width>
        <height>315</height>
        <texture>$INFO[ListItem.Icon]</texture>
        <aspectratio>keep</aspectratio>
      </control>
      <control type="image" description="Stars">
        <posx>1299</posx>
        <posy>409</posy>
        <width>315</width>
        <height>54</height>
        <aspectratio>keep</aspectratio>
        <texture>$VAR[ListItem.ratingbadge]</texture>
      </control>
      <control type="grouplist" id="9000">
        <left>1294</left>
        <top>500</top>
        <width>315</width>
        <height>240</height>
        <itemgap>0</itemgap>
        <orientation>vertical</orientation>
        <onleft>noop</onleft>
        <onright>noop</onright>
        <onup>9000</onup>
        <ondown>9000</ondown>
        <control type="button" id="6" description="Refresh">
          <height>60</height>
          <label></label>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="10" description="Get thumb">
          <height>60</height>
          <label></label>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="12" description="Get Fanart / Album info">
          <height>60</height>
          <label></label>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
        <control type="button" id="7" description="Set my rating">
          <height>60</height>
          <label></label>
          <texturenofocus border="3">buttons/ButtonNF.png</texturenofocus>
        </control>
      </control>
    </control>
  </controls>
</window>